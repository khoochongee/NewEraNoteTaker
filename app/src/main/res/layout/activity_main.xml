<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:id="@+id/dark_linear"
         android:layout_alignParentRight="true"
         android:layout_above="@id/bright_linear">
         <TextView
             android:id="@+id/dark1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/dark_linear"
             android:text="Dark Seer"
             android:textColor="@android:drawable/screen_background_dark"
             android:textSize="20dp" />
         <TextView
             android:id="@+id/dark2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Dark Seer"
             android:textColor="@android:drawable/screen_background_dark"
             android:textSize="20dp"/>
         <TextView
             android:id="@+id/dark3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Dark Seer"
             android:textColor="@android:drawable/screen_background_dark"
             android:textSize="20dp"/>
     </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bright_linear"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/bright1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bright Seer"
            android:textColor="@android:drawable/screen_background_dark"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/bright2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bright Seer"
            android:textColor="@android:drawable/screen_background_dark"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/bright3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bright Seer"
            android:textColor="@android:drawable/screen_background_dark"
            android:textSize="20dp"/>

    </LinearLayout>



</RelativeLayout>